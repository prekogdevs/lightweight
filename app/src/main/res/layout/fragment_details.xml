<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="previousFragment"
            type="String" />

        <variable
            name="diaryEntry"
            type="com.android.project.lightweight.persistence.entity.DiaryEntry" />

        <variable
            name="detailsViewModel"
            type="com.android.project.lightweight.data.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/includedLayout"
            layout="@layout/toolbar_with_textview" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includedLayout"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_all" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_chip" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_vitamins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_vitamins" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_minerals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_minerals" />


        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:id="@+id/amountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:visibility="@{diaryEntry.id == 0L ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup">

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtConsumedAmount"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/edtConsumedAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/consumedAmountHint"
                android:textAlignment="center"
                tools:text="150"
                android:imeOptions="actionDone"
                android:autofillHints="amount" />

            <Spinner
                android:id="@+id/consumedAmountUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/foodNutrientsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountLayout"
            tools:itemCount="10"
            tools:listitem="@layout/list_item_food_nutrient" />

        <Button
            android:id="@+id/btnPersistFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includedLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>