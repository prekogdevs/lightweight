<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/diaryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.android.project.lightweight.fragments.SearchFragment"
        android:label="Search in API"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.android.project.lightweight.fragments.DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="food"
            app:argType="com.android.project.lightweight.api.model.Food"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailsFragment_to_diaryFragment"
            app:destination="@id/diaryFragment" />
        <argument
            android:name="consumedOn"
            app:argType="long" />
        <argument
            android:name="diaryEntry"
            app:argType="com.android.project.lightweight.persistence.entity.DiaryEntry"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.android.project.lightweight.fragments.DiaryFragment"
        android:label="Your Diary"
        tools:layout="@layout/fragment_diary">
        <action
            android:id="@+id/action_diaryFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>